<%= turbo_stream_from "conversation_#{conversation.id}_user_#{user.id}" %>
<turbo-frame id="conversation">
  <%= render partial: "conversation", locals: { 
    messages: messages, 
    new_message: new_message, 
    conversation: conversation, 
    other_user: other_user,
    current_user: user 
  } %>
</turbo-frame>

<turbo-frame id="conversation_form">
  <%= render partial: "conversation_form", locals: { 
        conversation: conversation, 
        current_user: current_user 
  } %>
</turbo-frame>

