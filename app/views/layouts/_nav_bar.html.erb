<div class="flex justify-between bg-slate-200">
  <div>
    <ul class="flex gap-2">
      <li class="flex p-2 bg-amber-400 rounded">
        <%= link_to "Acceuil", root_path  %>
      </li>
      <li class="flex p-2 bg-amber-400 rounded">
        <%= link_to "Messagerie", conversation_index_path  %>
      </li>
    </ul>
  </div>

  <div class="flex">
    <div class="flex">
      <div class="flex bg-cyan-500 text-center p-2">
        <% if current_user %>
          <h1>👤<%= current_user.nickname %></h1>
        <% else %>
          <h1>Hey Invité</h1>
        <% end %>
        <%= "🏠#{current_user.community.name}" if current_user %>
      </div>
    </div>
  </div>

  <div>
    <div class="flex">
      <% if current_user %>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "cursor-pointer block p-2 bg-red-500 rounded text-black" %>
      <% end %>
    </div>
  </div>
</div>


