FROM ruby:3.3.5-slim

# Install dependencies including Node.js LTS
RUN apt-get update -qq && \
    curl -fsSL https://deb.nodesource.com/setup_lts.x | bash - && \
    apt-get install -y build-essential curl git libyaml-dev pkg-config sqlite3 libsqlite3-dev nodejs && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy Gemfile
COPY Gemfile Gemfile.lock ./

# Install gems
RUN bundle install

# Copy package files if you have them
COPY package*.json ./
RUN npm install 2>/dev/null || echo "No package.json found"

# Copy app code
COPY . .

# Create storage directories
RUN mkdir -p storage tmp/pids

# Expose port
EXPOSE 3000

# Start server
CMD ["bin/dev"]
